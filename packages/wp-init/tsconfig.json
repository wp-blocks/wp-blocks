{
	"extends": "@wp-blocks/tsconfig",
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./lib",
		"tsBuildInfoFile": "./build/tsconfig.tsbuildinfo",

		"module": "Node16",
		"moduleResolution": "Node16",
		"emitDeclarationOnly": false,
		"paths": {
			"@wp-blocks/utils": ["../utils/src/index.ts"]
		}
	},
	"references": [{ "path": "../utils" }],
	"include": ["./src/**/*"]
}
